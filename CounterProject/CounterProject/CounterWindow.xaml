<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="Counter App" Height="450" Width="800" WindowState="Maximized" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="txtCounter" HorizontalAlignment="Left" Height="81" Margin="269,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" Background="#FF70CF4E" Text="{Binding DisplayCounter.Count}"/>
        <Button x:Name="btnPlus" Content="+" Height="49" Canvas.Left="123" Canvas.Top="217" Width="199" FontWeight="Bold" FontSize="36" Background="#FFF36BF4" Command="{Binding Plus}"/>
        <Button x:Name="btnMinus" Content="-" Height="49" Canvas.Left="465" Canvas.Top="217" Width="199" HorizontalAlignment="Left" VerticalAlignment="Center"  FontWeight="Bold" FontSize="36" Background="#FFE95DEB" Command="{Binding Minus}"/>

    </Canvas>
</Window>
